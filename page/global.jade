doctype
html(lang=meta.code)
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        block meta
        link(rel="icon", type="image/png", href="#{i}favicon-1x.png", sizes="16x16")
        link(rel="icon", type="image/png", href="#{i}favicon-2x.png", sizes="32x32")
        link(rel="stylesheet", href="/global.css")
    
    body
        div#nav-head-outer
            div.backdrop.hidden-xs
            div.navbar.navbar-default.navbar-static-top(role="navigation"): div.container
                div.navbar-header
                    button.navbar-toggle.collapsed(data-toggle="collapse", data-target=".navbar-collapse")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    
                    a.navbar-brand(href="/"): img(src="#{i}logo.png", width="221", height="22")
                
                div.collapse.navbar-collapse: ul.nav.navbar-nav.navbar-right
                    li: a(href="/#index-video") #{header.intro}
                    li: a(href="/support") #{header.support}
                    li: a(href="/advertise") #{header.advertise}
                    li: a(href="/about") #{header.company}
                    
                    p.navbar-text
                        a(href=contact.facebook, target="_blank")
                            img(src="#{i}ic-facebook.png", width="20", height="23")
                        a(href=contact.twitter, target="_blank")
                            img(src="#{i}ic-twitter.png", width="20", height="23")
                        a(href=contact.blog, target="_blank")
                            img(src="#{i}ic-blog.png", width="20", height="23")
        
        block content
        
        div#nav-foot-outer
            div.backdrop
            div.container#nav-foot(role="navigation")
                ul.nav-left
                    li © Buzzvil
                    li: a(href="/terms") #{footer.terms}
                    li: a(href="/privacy") #{footer.privacy}
                
                ul.nav-right
                    li: a(rel="alternate", href="//en.honeyscreen.com", hreflang="en") English
                    li: a(rel="alternate", href="//ko.honeyscreen.com", hreflang="ko") 한국어
                    li: a(rel="alternate", href="//ja.honeyscreen.com", hreflang="ja") 日本語
                    li: a(rel="alternate", href="//zh-tw.honeyscreen.com", hreflang="zh-TW") 繁體字
        
        script(src="/global.js", async)
        script.
            (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
            function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
            e=o.createElement(i);r=o.getElementsByTagName(i)[0];
            e.src='//www.google-analytics.com/analytics.js';
            r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
            ga('create','#{gakey}','auto');ga('send','pageview');