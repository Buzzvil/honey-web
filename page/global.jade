- var navbarOpts = ["navbar", "navbar-default", "navbar-static-top"]

mixin break(arr, postfix)
    each str in arr
        span #{str}#{postfix}

doctype
html(lang=meta.code)
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        block meta
        link(rel="icon", type="image/png", href="#{i}favicon-1x.png", sizes="16x16")
        link(rel="icon", type="image/png", href="#{i}favicon-2x.png", sizes="32x32")
        link(rel="stylesheet", href="/global.css")
        <!--[if lt IE 9]>
        script(src="/legacy.js")
        <![endif]-->
    
    body
        nav(class=navbarOpts, role="navigation"): div.container
            div.navbar-header
                button.navbar-toggle.collapsed(data-toggle="collapse", data-target=".navbar-collapse")
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                
                a.navbar-brand.ic.ic-logo(href="/")
            
            div.collapse.navbar-collapse.navbar-right
                ul.nav.navbar-nav
                    li: a(href="/#index-video") #{header.intro}
                    li: a(href="/support") #{header.support}
                    li: a(href="/advertise") #{header.advertise}
                    li: a(href="/about") #{header.about}
                    li: a(href="http://www.adhours.com/partner_user/login/") #{header.signin}
                
                p.navbar-text
                    a.ic.ic-social-facebook(href=contact.facebook, target="_blank")
                    a.ic.ic-social-twitter(href=contact.twitter, target="_blank")
                    a.ic.ic-social-blog(href=contact.blog, target="_blank")
        
        block content
        
        div#nav-foot-outer
            div.backdrop
            nav.container#nav-foot(role="navigation")
                ul.nav-left
                    li © Buzzvil
                    li: a(href="/terms") #{footer.terms}
                    li: a(href="/privacy") #{footer.privacy}
                
                ul.nav-right
                    li: a(rel="alternate", href="//en.honeyscreen.com", hreflang="en") English
                    li: a(rel="alternate", href="//ko.honeyscreen.com", hreflang="ko") 한국어
                    li: a(rel="alternate", href="//ja.honeyscreen.com", hreflang="ja") 日本語
                    li: a(rel="alternate", href="//zh-tw.honeyscreen.com", hreflang="zh-TW") 繁體字
        
        script(src="/global.js", async)
        script.
            (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
            function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
            e=o.createElement(i);r=o.getElementsByTagName(i)[0];
            e.src='//www.google-analytics.com/analytics.js';
            r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
            ga('create','#{gakey}','auto');ga('send','pageview');